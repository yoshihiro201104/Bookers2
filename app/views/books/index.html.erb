<h1>Books</h1>
<% @books.each do |book| %>
  <p>タイトル</p>
  <span>
    <%= book.title %>
     <%= book.body %>
  </span>
  <%= link_to 'Show', book %>
  <%= link_to 'Edit', edit_book_path(book) %>
  <%= link_to 'Destroy', book, method: :delete, data: { confirm: 'Are you sure?' } %>

<% end %>

<h1>New book</h1>
<%= form_with model: Book.new, url: books_path do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit 'Create book' %>
<% end %>